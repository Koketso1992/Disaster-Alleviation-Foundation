<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DAF_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DAF_Project.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color:orange">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-family:Bahnschrift">DisasterAlleviationFoundation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("userType") == "Employee")
                        {
                            <a class="btn btn-link" asp-area="" asp-page="/Capture/Monetary/Monetary">Money</a>
                            <a class="btn btn-link" asp-area="" asp-page="/Capture/Goods/Goods">Goods</a>
                            <a class="btn btn-link" asp-area="" asp-page="/Capture/Disaster/Disaster">Disaster</a>
                            <a class="btn btn-link" asp-area="" asp-page="/ViewAll/View">View</a>
                            <a class="btn btn-link" asp-area="" asp-page="/Allocate/Allocate">Allocate</a>
                            <a class="btn btn-link" asp-area="" asp-page="/Purchase/Purchase">Purchase</a>
                        }
                        else if (Context.Session.GetString("userType") == "Non-Employee")
                        {
                            <a class="btn btn-link" asp-area="" asp-page="/Capture/Monetary/Monetary">Monetary</a>
                            <a class="btn btn-link" asp-area="" asp-page="/Capture/Goods/Goods">Goods</a>
                            <a class="btn btn-link" asp-area="" asp-page="/ViewAll/View">View</a>
                        }
                    </ul>
                </div>
                <div class="mr-2">
                    <partial name="_LoginStatusPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>